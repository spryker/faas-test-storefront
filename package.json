{
  "name": "fes-storefront",
  "type": "module",
  "scripts": {
    "dev": "vite -c vite.config.ts",
    "dev:ssr": "node --experimental-modules --experimental-specifier-resolution=node server/server",
    "build": "npm run build:client && npm run build:ssr && npm run build:netlify",
    "build:client": "vite build",
    "build:ssr": "vite build -c vite.config.server.ts",
    "build:netlify": "vite build -c vite.config.netlify.ts"
  },
  "devDependencies": {
    "@netlify/functions": "^1.3.0",
    "node-fetch": "3.2.10",
    "vite": "^3.0.0",
    "vite-plugin-static-copy": "^0.12.0"
  }
}
